{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "base",
					"color": "#ffffff",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#000000",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#1d4ed8",
					"name": "Primary"
				}
			]
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "64rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "ui-sans-serif, sans-serif",
					"slug": "primary",
					"name": "Primary (Sans-serif)"
				},
				{
					"fontFamily": "Charter, Georgia, serif",
					"slug": "secondary",
					"name": "Secondary (Serif)"
				}
			],
			"fluid": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"text": "var:preset|color|contrast",
			"background": "var:preset|color|base"
		},
		"spacing": {
			"blockGap": "2.25rem",
			"padding": {
				"top": "0",
				"bottom": "0",
				"left": "var:preset|spacing|60",
				"right": "var:preset|spacing|60"
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|secondary",
			"fontSize": "var:preset|font-size|medium",
			"lineHeight": "1.67"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary"
				}
			},
			"link": {
				"color": {
					"text": "var:preset|color|primary"
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "comments",
			"title": "Comments"
		}
	]
}
